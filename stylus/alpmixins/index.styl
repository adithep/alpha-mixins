@font-face
  font-family 'liga'
  src url('liga/websymbolsligaregular.eot')
  src url('liga/websymbolsligaregular.eot?#iefix') format('embeded-opentype')
    , url('liga/websymbolsligaregular.woff') format('woff')
    , url('liga/websymbolsligaregular.ttf') format('truetype')
    , url('liga/websymbolsligaregular.svg#web_symbols_ligaregular') format('svg')

$red = #FA5C4F
$brown = #363636
$blue = #328C99
$yellow = #ADE849
$green = #3CBF53
$black = #000000

$text-black = #363636
$text-white = #ffffff

font-liga()  
  @font-face
    font-family 'liga'
    src url('localhost:3000/websymbolsligaregular.eot')
    src url('localhost:3000/websymbolsligaregular.eot?#iefix') format('embeded-opentype')
      , url('localhost:3000/websymbolsligaregular.woff') format('woff')
      , url('localhost:3000/websymbolsligaregular.ttf') format('truetype')
      , url('localhost:3000/websymbolsligaregular.svg#web_symbols_ligaregular') format('svg')

transition(val)
  -webkit-transition: val
  -moz-transition: val
  -o-transition: val
  transition: val

box-shadow(val)
  -webkit-box-shadow: val
  -moz-box-shadow: val
  box-shadow: val

border-radius(val)
  -moz-border-radius: val
  -webkit-border-radius: val
  border-radius: val

box-sizing()
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

circle-span()
  display block
  float right
  width 27px
  height 27px
  line-height 27px
  color $text-black
  font-size 21px
  font-weight bold
  text-align center
  text-indent 3px
  background white
  border-radius(50%)
